<%= form_for task do |f| %>
  <%= f.label :title, "Enter task title" %>
  <%= f.text_field :title %><br>

  <%= f.label :details, "Enter task details" %>
  <%= f.text_field :details %><br>

  <% if !@task.new_record?() %>
  <%= f.label "Completed this task?" %>
  <%= f.check_box :completed %><br>
  <% end  %>

  <%= f.submit %>

<% end %>
